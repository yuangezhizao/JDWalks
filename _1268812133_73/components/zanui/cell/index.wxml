<view catchtap="cellTap" class="cell-class zan-cell {{isLastCell?'last-cell':''}} {{isLink?'zan-cell--access':''}}">
    <view class="zan-cell__icon">
        <slot name="icon"></slot>
    </view>
    <view class="zan-cell__bd">
        <view class="zan-cell__text" wx:if="{{title}}">{{title}}</view>
        <view class="zan-cell__desc" wx:if="{{label}}">{{label}}</view>
        <slot></slot>
    </view>
    <view bindtap="footerTap" class="zan-cell__ft">
        <block wx:if="{{value}}">{{value}}</block>
        <slot name="footer" wx:else></slot>
    </view>
</view>
