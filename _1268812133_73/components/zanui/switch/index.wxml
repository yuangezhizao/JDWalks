<view bindtap="handleZanSwitchChange" checked="{{checked}}" class="zan-switch zan-switch--{{checked?'on':'off'}} {{disabled?'zan-swtich--disabled':''}}" disabled="{{disabled}}" loading="{{loading}}">
    <view class="zan-switch__circle">
        <view class="zan-switch__loading" hidden="{{!loading}}"></view>
    </view>
    <view class="zan-switch__bg"></view>
</view>
