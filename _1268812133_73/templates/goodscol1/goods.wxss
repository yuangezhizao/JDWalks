.mallcol1 {
    display: flex;
    height: 200rpx;
    margin-top: 20rpx;
    background-color: #ffffff;
    justify-content: flex-start;
    width: 100%;
    position: relative;
    border-bottom: 1rpx solid #f4f4f4;
    border-radius: 16rpx;
    over-flow: hidden;
}

.mallcol1:last-child {
    border-bottom: 0rpx solid #f4f4f4;
}

.mallcol1>view:nth-child(1) image:nth-child(1) {
    width: 200rpx;
    height: 200rpx;
    border-top-left-radius: 16rpx;
    border-bottom-left-radius: 16rpx;
}

.mallcol1>view image:nth-child(2) {
    width: 104rpx;
    height: 48rpx;
    position: absolute;
    top: 10rpx;
    left: 106rpx;
}

.mallcol1 .cardbody {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 32rpx;
    height: 100%;
    width: 100%;
}

.mallcol1 .cardbody>view:nth-child(1)>view:nth-child(2) {
}

.mallcol1 .cardbody>view:nth-child(2) {
    display: flex;
}

.mallcol1 .cardbody>view>view:nth-child(2) {
    font-size: 24rpx!important;
    color: #AAAAAA;
}

.mallcol1 .cardbody>view:nth-child(1)>view:nth-child(1) {
    font-size: 32rpx;
    width: 465rpx;
}