.oheader {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #F15A24;
    flex-direction: column;
    padding-bottom: 30rpx;
    font-size: 36rpx;
}

.oheader image {
    width: 100rpx;
    height: 100rpx;
}

.obody {
    border-top: 30rpx solid #F4F4F4;
    border-bottom: 30rpx solid #F4F4F4;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.obody image {
    width: 48rpx;
    height: 48rpx;
}

.obody>view {
    display: flex;
    height: 88rpx;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    width: 100%;
    border-bottom: 1rpx solid #F4F4F4;
}

.kdinfo>view {
    display: flex;
    align-items: center;
}

.kdinfo button {
    height: 50rpx;
    width: 120rpx;
    font-size: 25rpx;
    background: #ffffff;
    border: 1rpx solid #F15A24;
    color: #F15A24;
}

.kdinfo>view>image {
    margin-right: 20rpx;
}

.deliveryinfo {
    border-bottom: none;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: flex-start!important;
    align-items: center;
    min-height: 110rpx;
}

.deliveryinfo>view:nth-child(2) {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}

.deliveryinfo>view:nth-child(2)>view:nth-child(2) {
    color: #999;
}

.odetail {
    font-size: 30rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.odetail image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 16rpx;
    margin-right: 30rpx;
}

.odetail>view:nth-child(1) {
    display: flex;
    height: 140rpx;
    align-items: center;
    border-bottom: 1rpx solid #F4F4F4;
    padding-bottom: 30rpx;
    margin-bottom: 30rpx;
}

.odetail>view:nth-child(2) {
    display: flex;
    flex-direction: column;
}

.odetail>view:nth-child(2)>view {
    display: flex;
    align-tiems: center;
    padding-bottom: 15rpx;
}

.odetail>view:nth-child(2)>view>view:nth-child(1) {
    flex: 1;
}

.odetail>view:nth-child(2)>view>view:nth-child(2) {
    color: #999;
}